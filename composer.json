{
    "name": "bear/qatools",
    "description": "PHP QA Tools",
    "keywords": [
        "php",
        "qa"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "doctrine/coding-standard": "^13.0.1",
        "friendsofphp/php-cs-fixer": "^3.4",
        "phploc/phploc": "^7.0",
        "phpmd/phpmd": "^2.11",
        "phpmetrics/phpmetrics": "^2.7",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.6 || ^10.5 || ^11.3",
        "psalm/plugin-phpunit": "^0.16 || ^0.19",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^4.2 || ^5.25"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "tests": [
            "@cs",
            "@sa",
            "@test"
        ],
        "sa": [
            "phpstan analyse --no-progress -c phpstan.neon",
            "psalm --no-progress",
            "phpmd src text ./phpmd.xml"
        ],
        "coverage": "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage",
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "metrics": "phpmetrics --report-html=build/metrics --exclude=Exception src"
    }
}
